<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- COMENTARIO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgDonoComentario"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorCinzaTexto"
                    android:src="@drawable/perfil_icone"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mascara_foto" />
            </FrameLayout>

            <!-- Area de textos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <!-- AUTOR -->
                    <TextView
                        android:id="@+id/txtNomeComentador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome Administrador"
                        android:textSize="13dp"
                        android:textColor="@color/colorCinzaEscuro"
                        android:textStyle="bold" />

                    <!-- DATA -->
                    <TextView
                        android:id="@+id/txtDataComentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="► Fevereiro 12, 2016"
                        android:textSize="10dp"
                        android:textColor="@color/colorCinzaTexto" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txtTextoComentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorCinzaEscuro"
                    android:text="Comentário que foi comentado por um comentador"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>