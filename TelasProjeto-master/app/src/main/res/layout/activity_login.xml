<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBrancoFundo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.PrimeiroLogin">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_img_logo_azul"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <!-- Campo para colocar o CPF -->
    <EditText
        android:id="@+id/txtCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBranco"
        android:backgroundTint="@color/colorBranco"
        android:ems="10"
        android:hint="Digite seu CPF"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/colorCinzaTexto"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/txtSenha"
        android:layout_alignStart="@+id/txtSenha" />

    <!-- BotÃ£o para PROXIMO -->
    <Button
        android:id="@+id/btnLogar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:background="@color/colorPrimary"
        android:text="@string/textoBtnEntrar"
        android:textColor="@color/colorBrancoFundo"
        android:layout_below="@+id/txtCpf"
        android:layout_alignLeft="@+id/txtCpf"
        android:layout_alignStart="@+id/txtCpf"
        android:layout_alignRight="@+id/txtSenha"
        android:layout_alignEnd="@+id/txtSenha"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBranco"
        android:backgroundTint="@color/colorBranco"
        android:ems="10"
        android:hint="Senha"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/colorCinzaTexto"
        android:layout_below="@+id/txtCpf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Esqueceu sua Senha?"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnLogar"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 - Antonio Cesar\n22 - Elton Naoki\n33 - Andrey Medeiros\n44 - Felipe Bilhares\nSenha - 123"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

</RelativeLayout>