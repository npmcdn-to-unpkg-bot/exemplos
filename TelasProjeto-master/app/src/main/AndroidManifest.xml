<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ms.senac.br.appsenac">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.PrimeiroLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.CadastrarSenhaPergunta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.RedefinicaoDeSenha"
            android:label="@string/textoRedefinicaoDeSenha"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.TelaPublicacao" />
        <activity
            android:name=".view.PaginaIncial"
            android:label="@string/paginaIncial"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".view.PopupFiltrar" />
        <activity android:name=".view.Perfil" />
        <activity android:name=".view.AreaAluno" />
        <activity android:name=".view.SobrePosts" />
        <activity android:name=".view.DetalhesPostActivity"></activity>
    </application>

</manifest>